{
  "extends": "airbnb",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "screeps/screeps": true
  },
  "globals": {

  },
  "plugins": [
    "screeps"
  ],
  "rules": {
    "no-console": 0,
    "eqeqeq": ["error", "smart"],
    "indent": ["error", 4],
    "max-len": ["error", 120],
    "import/prefer-default-export": 0,
    "class-methods-use-this": 0,
    "comma-dangle": ["error", "never"],
    "no-param-reassign": 0,
    "no-mixed-operators": 0,
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  },
}
